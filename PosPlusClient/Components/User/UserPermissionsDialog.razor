@implements IDialogContentComponent<IQueryable<UsersPermission>>

<FluentDataGrid ref="@grid" AutoFit="true" Items="Content" TGridItem="UsersPermission" RowSize="DataGridRowSize.Medium">
    <PropertyColumn Property="@(p => p.IdPermissionNavigation.Area)" Sortable="true" Title="Area" Align="Align.Center"/>
    <PropertyColumn Property="@(p => p.IdPermissionNavigation.Description)" Sortable="true" Title="Descripción" Align="Align.Center"/>
    <TemplateColumn Title="Permitir" Sortable="true" Width="128px" Style="text-align: left" Align="Align.Start">
        <FluentCheckbox @bind-Value="@context.Granted"/>
    </TemplateColumn>
    <TemplateColumn Title="Elevar" Sortable="true" Width="128px" Style="text-align: left" Align="Align.Start">
        <FluentCheckbox @bind-Value="@context.RequestElevation"/>
    </TemplateColumn>
</FluentDataGrid>

@code {
    [Parameter] 
    public IQueryable<UsersPermission> Content { get; set; } = default!;
    private FluentDataGrid<UsersPermission>? grid;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }
}

